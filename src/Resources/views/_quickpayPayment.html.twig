{% import '@SyliusAdmin/Common/Macro/money.html.twig' as money %}

{% set quickpay_payments = quickpay_payments|filter(p => p.details.quickpayPaymentId is defined) %}

{% if quickpay_payments is not empty %}
    <div class="field" id="quickpay-payment-wrapper">
        <label for="quickpay-payment">{{ 'setono_sylius_quickpay_refund_bridge.select_quickpay_payment'|trans }}</label>
        <select id="quickpay-payment" name="sylius_refund_quickpay_payment">
            {% for payment in quickpay_payments %}
                <option value="{{ payment.id }}">
                    {{ payment.details.quickpayPaymentId}} - {{ money.format(payment.amount, payment.currencyCode) }} - {{ payment.method.name }}
                </option>
            {% endfor %}
        </select>
    </div>
{% endif %}
