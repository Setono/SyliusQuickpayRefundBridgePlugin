{
    "name": "setono/sylius-quickpay-refund-bridge-plugin",
    "type": "symfony-bundle",
    "description": "Enables full and partial refunds through QuickPay for Sylius and Refund Plugin (https://github.com/Sylius/RefundPlugin)",
    "keywords": [
        "sylius",
        "sylius-plugin",
        "quickpay",
        "refund"
    ],
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "setono/sylius-quickpay-plugin": "^1.0@beta",
        "sylius/refund-plugin": "^1.0.0-RC.3",
        "sylius/sylius": "^1.7",
        "symfony/flex": "^1.8"
    },
    "require-dev": {
        "behat/behat": "^3.6.1",
        "behat/mink-selenium2-driver": "^1.4",
        "dmore/behat-chrome-extension": "^1.3",
        "dmore/chrome-mink-driver": "^2.7",
        "friends-of-behat/mink": "^1.8",
        "friends-of-behat/mink-browserkit-driver": "^1.4",
        "friends-of-behat/mink-extension": "^2.4",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.1",
        "friends-of-behat/variadic-extension": "^1.3",
        "friends-of-behat/page-object-extension": "^0.3.1",
        "matthiasnoback/symfony-config-test": "^4.1",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "phpspec/phpspec": "^6.1",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.0",
        "symfony/browser-kit": "^4.4",
        "symfony/debug-bundle": "^4.4",
        "symfony/dotenv": "^4.4",
        "symfony/intl": "^4.4",
        "symfony/maker-bundle": "^1.15",
        "symfony/web-profiler-bundle": "^4.4"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "symfony": {
            "allow-contrib": true
        },
        "bin-dir": "tests/Application/bin",
        "config-dir": "tests/Application/config",
        "var-dir": "tests/Application/var",
        "public-dir": "tests/Application/public"
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusQuickpayRefundBridgePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusQuickpayRefundBridgePlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check src/ spec/ tests/",
        "fix-style": "vendor/bin/ecs check src/ spec/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit",
        "post-install-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-update-cmd": [
            "php bin/create_node_symlink.php"
        ],
        "post-create-project-cmd": [
            "php bin/create_node_symlink.php"
        ]
    }
}
